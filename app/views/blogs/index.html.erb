<div class="container">
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic"><%= @last_blog.title %></h1>
      <p class="lead my-3"><%= @last_blog.body.truncate(100, separator: ' ') %></p>
      <p class="lead mb-0"></p><%= link_to "Continue reading", blog_path(@last_blog), class: "text-white font-weight-bold"  %>
    </div>
  </div>
<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-3 mb-4 font-italic border-bottom">
          Stories and Posts
      </h3>
      <%= paginate @blogs %>
      <%= render @blogs %>
      <%= paginate @blogs %>
      

    </div>
      <%= render "shared/blog_sidebar" %>
  </div>
</main>
</div>

    





